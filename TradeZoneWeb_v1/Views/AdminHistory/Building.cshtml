@{
    ViewData["Title"] = "Building History";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@using TradeZoneWeb_v1.Helpers
@using TradeZoneWeb_v1.Models.AdminModel
@using TradeZoneWeb_v1.Models.Requests
@model PagedResults<HistoryModel>
@section CssForHead {
    <link href="~/assets/default/assets/css/admin/admin-history.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" type="text/css" href="~/assets/default/assets/pages/nestable/nestable.css" />
}
@section JsForHead {
    <script type="text/javascript" language="javascript" src="https://code.jquery.com/jquery-3.5.1.js"></script>
}
<div class="main-body">
    <div class="page-wrapper">
        <div class="page-header">
            <div class="page-header-title">
                <h4>Building History</h4>
            </div>

            <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index", "Admin")">
                            <i class="icofont icofont-home"></i>
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="#!">building-history</a>
                    </li>
                </ul>
            </div>

            <br /><br />
            <div class="card">
                <div class="custom-header card-header">
                    <div style="float: left; width: 90px;">
                        <select id="page-size" style="height: 39px;" class="filter custom-select custom-select-sm form-control form-control-sm">
                            @foreach (var item in PageSizeRequest.PageSize)
                            {
                                <option value="@item">@item</option>
                            }
                        </select>
                    </div>

                    <div class="input-group input-group-button input-group-primary" style="float: right; width: 300px; margin-bottom: 0px;">
                        <input id="key-search" type="text" class="form-control" placeholder="Search here..." value="">
                        <span class="input-group-addon" id="basic-addon1" style="margin-top: 0px;">
                            <button id="button-search" class="btn btn-primary">Search</button>
                        </span>
                    </div>
                    <div style="float: right; width: 200px">
                        <select id="action" style="height: 39px;" class="filter custom-select custom-select-sm form-control form-control-sm" asp-items="Html.GetEnumSelectList<ActionBuildingEnum.ActionSurvey>()">
                        </select>
                    </div>
                    <div style="float: right; width: 200px">
                        <select id="cb-status" style="height: 39px;" class="filter custom-select custom-select-sm form-control form-control-sm" asp-items="Html.GetEnumSelectList<StatusEnum.Status>()">
                        </select>
                    </div>
                </div>
                <div class="card-block table-border-style">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered nowrap dataTable no-footer dtr-inline">
                            <thead>
                                <tr>
                                    <th class="text-center">No</th>
                                    <th class="text-center">Name</th>
                                    <th class="text-center">Account</th>
                                    <th class="text-center">Role</th>
                                    <th class="text-center">CreateDate</th>
                                    <th class="text-center">Action</th>
                                    <th class="text-center">Current Status</th>
                                    <th class="text-center">Details</th>
                                </tr>
                            </thead>
                            <tbody id="tblData">
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="preloader3 loader-block pos-absolute" style="
                    z-index: 2;
                    margin: auto;
                    width: 100%;
                    height: 100%;
                    background-color: rgba(0, 0, 0, 0.5); " id="spinner">
    <div class="circ1"></div>
    <div class="circ2"></div>
    <div class="circ3"></div>
    <div class="circ4"></div>
</div>
<div class="row" style="margin-top: -40px;">
    <div class="col-xs-12 col-sm-12 col-md-5">
        <div id="paged">
        </div>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-7">
        <div class="dataTables_paginate paging_simple_numbers" id="footer-search_paginate">
            <div class="container" style="float: left;">
                <nav aria-label="Page navigation">
                    <ul class="pagination" id="pagination"></ul>
                </nav>
            </div>
        </div>
    </div>
</div>

@section ScriptsForBottom {
    <script src="~/assets/default/assets/js/admin-history/admin-history-building.js"></script>
    <script type="text/javascript" src="~/assets/default/assets/pages/accordion/accordion.js"></script>
    <script src="~/assets/default/assets/js/paging/jquery.twbsPagination.min.js"></script>
    <script src="~/assets/default/assets/pages/nestable/jquery.nestable.js"></script>
}